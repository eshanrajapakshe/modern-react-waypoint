{
  "name": "@eshan.rajapakshe/react-waypoint",
  "version": "0.0.1",
  "description": "Modern, fully TypeScript implementation of react-waypoint with React 19 compatibility",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --report-unused-disable-directives --max-warnings 10",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\" \"tests/**/*.{ts,tsx}\"",
    "typecheck": "tsc --noEmit",
    "verify-package": "node scripts/verify-package.js",
    "pre-publish": "node scripts/pre-publish-check.js",
    "prepublishOnly": "npm run typecheck && npm run lint && npm run test && npm run build"
  },
  "keywords": [
    "react",
    "waypoint",
    "scroll",
    "intersection-observer",
    "lazy-loading",
    "infinite-scroll",
    "viewport",
    "typescript"
  ],
  "author": "eshanrajapakse@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eshanrajapakshe/modern-react-waypoint.git"
  },
  "bugs": {
    "url": "https://github.com/eshanrajapakshe/modern-react-waypoint/issues"
  },
  "homepage": "https://github.com/eshanrajapakshe/modern-react-waypoint#readme",
  "peerDependencies": {
    "react": ">=19.0.0"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.0.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^22.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/ui": "^2.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "happy-dom": "^14.0.0",
    "prettier": "^3.3.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "typescript": "^5.5.0",
    "vite": "^5.4.0",
    "vite-plugin-dts": "^4.0.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
